// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int  @id @default(autoincrement())
  name        String  @unique
  Place       Place[]
  liked_user  UserLikedCategories[]  
}

model User {
  id              String @id
  username        String @unique
  password        String 
  email           String @unique
  full_name       String
  location        String
  profile_pic     String?
  solo_traveler   Boolean?
  liked_categories UserLikedCategories[]

  plan            Plan[]
  ratings         Rating[]  @relation("UserRatings")
}

model UserLikedCategories {
  id          String  @id
  user_id     String 
  category_id Int

  user      User      @relation(fields: [user_id], references: [id])
  category  Category  @relation(fields: [category_id], references: [id])

  @@unique([user_id, category_id])
}

model Plan {
  id             String      @id
  user           User        @relation(fields: [user_id], references: [id])
  places         Place[]     @relation("PlanPlace")
  user_id        String
  title          String
  num_of_people  Int
  city           String
  start_location String
  start_time     DateTime
  PlanPlace      PlanPlace[]
}

model Place {
  id          Int         @id @default(autoincrement())
  category    Category    @relation(fields: [category_id], references: [id])
  category_id Int
  name        String
  description String?
  city        String
  price       Float
  lat         Float
  lng         Float
  rating      Float
  image       String
  plans       Plan[]      @relation("PlanPlace")
  PlanPlace   PlanPlace[]
  ratings     Rating[]  @relation("PlaceRatings")
}

model PlanPlace {
  id              String   @id
  plan_id         String
  place_id        Int
  depart_time     DateTime
  transport_mode  String?
  transport_price String?

  plan  Plan  @relation(fields: [plan_id], references: [id])
  place Place @relation(fields: [place_id], references: [id])

  @@unique([plan_id, place_id])
}

model Rating{
  id         String    @id 
  rating     Float
  
  userId     String
  placeId    Int

  user       User   @relation("UserRatings", fields: [userId], references: [id])
  place      Place  @relation("PlaceRatings", fields: [placeId], references: [id])

  @@unique([userId, placeId])
}
