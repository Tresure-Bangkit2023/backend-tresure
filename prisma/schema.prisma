generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id         Int                   @id @default(autoincrement())
  name       String                @unique
  Place      Place[]
  liked_user UserLikedCategories[]
}

model User {
  id               String                @id
  username         String                @unique
  password         String
  email            String                @unique
  full_name        String
  location         String?
  profile_pic      String?
  solo_traveler    Boolean?
  plan             Plan[]
  ratings          Rating[]              @relation("UserRatings")
  liked_categories UserLikedCategories[]
}

model UserLikedCategories {
  id          String   @id
  user_id     String
  category_id Int
  category    Category @relation(fields: [category_id], references: [id])
  user        User     @relation(fields: [user_id], references: [id])

  @@unique([user_id, category_id])
  @@index([category_id], map: "UserLikedCategories_category_id_fkey")
}

model Plan {
  id             String      @id
  user_id        String
  title          String
  num_of_people  Int
  city           String
  start_location String
  start_time     DateTime
  user           User        @relation(fields: [user_id], references: [id])
  PlanPlace      PlanPlace[]
  places         Place[]     @relation("PlanPlace")

  @@index([user_id], map: "Plan_user_id_fkey")
}

model Place {
  id          Int         @id @default(autoincrement())
  category_id Int
  name        String
  description String?
  city        String
  price       Float
  lat         Float
  lng         Float
  rating      Float
  image       String
  category    Category    @relation(fields: [category_id], references: [id])
  PlanPlace   PlanPlace[]
  ratings     Rating[]    @relation("PlaceRatings")
  plans       Plan[]      @relation("PlanPlace")

  @@index([category_id], map: "Place_category_id_fkey")
}

model PlanPlace {
  id              String   @id
  plan_id         String
  place_id        Int
  depart_time     DateTime
  transport_mode  String?
  transport_price Float
  place           Place    @relation(fields: [place_id], references: [id])
  plan            Plan     @relation(fields: [plan_id], references: [id])

  @@unique([plan_id, place_id])
  @@index([place_id], map: "PlanPlace_place_id_fkey")
}

model Rating {
  id      String @id
  rating  Float
  userId  String
  placeId Int
  place   Place  @relation("PlaceRatings", fields: [placeId], references: [id])
  user    User   @relation("UserRatings", fields: [userId], references: [id])

  @@unique([userId, placeId])
  @@index([placeId], map: "Rating_placeId_fkey")
}
